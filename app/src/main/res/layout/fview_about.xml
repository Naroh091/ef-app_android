<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cardview_light_background">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Developed by"
                    android:id="@+id/textView2"
                    style="@style/AppTheme.Header"/>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:weightSum="10"
                          android:orientation="horizontal"
                          android:id="@+id/aboutPazuzu">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView2"
                        android:src="@drawable/icon_pazuzu"
                        android:layout_weight="1"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Pazuzu"
                        android:id="@+id/textView4"
                        android:layout_gravity="center"
                        android:layout_weight="9"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:weightSum="10"
                          android:orientation="horizontal"
                          android:id="@+id/aboutRequinard">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView3"
                        android:src="@drawable/icon_condemned"
                        android:layout_weight="1"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Requinard"
                        android:id="@+id/textView3"
                        android:layout_weight="9"
                        android:layout_gravity="center"/>
            </LinearLayout>

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:padding="@dimen/outer_padding"
                      android:textAppearance="?android:textAppearanceMedium"
                      android:text="More thanks to \n\nLuchs (Windows, Team Lead)\nOmega Wolfblood (iOS)\nZefiro (Team Lead)\n\nSpecial thanks to Akulatraxas, Mark Treefox and StreifiGreif"/>

            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/textVersion"
                    style="@style/AppTheme.Header.Sub"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Attributation"
                    android:id="@+id/textView5" style="@style/AppTheme.Header"/>
            <us.feras.mdv.MarkdownView android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:id="@+id/markdownAttributation"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>