<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:id="@+id/layout"
                android:clickable="true"
                android:longClickable="true">
    <TextView android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:id="@+id/dealerName"
              android:textAppearance="?android:textAppearanceLarge"
              android:padding="@dimen/inner_padding"
              android:text="Dealer name"
              android:gravity="center"/>

    <ImageView android:layout_width="75dp" android:layout_height="match_parent"
               android:src="@drawable/placeholder_event"
               android:scaleType="centerCrop"
               android:id="@+id/dealerPreviewImage"
               android:foregroundGravity="right" android:layout_alignParentTop="true"
               android:layout_alignParentEnd="true"/>
</RelativeLayout>